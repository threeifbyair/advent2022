    "version": "0.2.0",
    "configurations": [
        {
            "type": "lldb",
            "request": "launch",
            "name": "Debug unit tests in library 'advent2022'",
            "cargo": {
                "args": [
                    "test",
                    "--no-run",
                    "--lib",
                    "--package=advent2022"
                ],
                "filter": {
                    "name": "advent2022",
                    "kind": "lib"
                }
            },
            "args": [],
            "cwd": "${workspaceFolder}"
        },
        {
            "type": "lldb",
            "request": "launch",
            "name": "Debug executable part 1",
            "cargo": {
                "args": [
                    "build",
                    "--bin=4",
                    "--package=advent2022"
                ],
                "filter": {
                    "name": "4",
                    "kind": "bin"
                }
            },
            "args": ["-i", "input/4.txt"],
            "cwd": "${workspaceFolder}"
        },
        {
            "type": "lldb",
            "request": "launch",
            "name": "Debug example in executable part 1",
            "cargo": {
                "args": [
                    "build",
                    "--bin=4",
                    "--package=advent2022"
                ],
                "filter": {
                    "name": "4",
                    "kind": "bin"
                }
            },
            "args": ["-i", "input/4-ex.txt"],
            "cwd": "${workspaceFolder}"
        },
        {
            "type": "lldb",
            "request": "launch",
            "name": "Debug executable part 2",
            "cargo": {
                "args": [
                    "build",
                    "--bin=4",
                    "--package=advent2022"
                ],
                "filter": {
                    "name": "4",
                    "kind": "bin"
                }
            },
            "args": ["-p", "-i", "input/4.txt"],
            "cwd": "${workspaceFolder}"
        },
        {
            "type": "lldb",
            "request": "launch",
            "name": "Debug example in executable part 2",
            "cargo": {
                "args": [
                    "build",
                    "--bin=4",
                    "--package=advent2022"
                ],
                "filter": {
                    "name": "4",
                    "kind": "bin"
                }
            },
            "args": ["-p", "-i", "input/4-ex.txt"],
            "cwd": "${workspaceFolder}"
        }
    ]
}